<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.ulp.trabajopractico3.ui.home.HomeFragment"
        android:label="@string/menu_cargar"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.ulp.trabajopractico3.ui.gallery.GalleryFragment"
        android:label="@string/menu_listar"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_eliminar"
        android:name="com.ulp.trabajopractico3.ui.eliminar.EliminarFragment"
        android:label="@string/menu_eliminar"
        tools:layout="@layout/fragment_eliminar">

        <action
            android:id="@+id/accion_eliminar_detalle"
            app:destination="@+id/detalleFragment"
        />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.ulp.trabajopractico3.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_salir"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/detalleFragment"
        android:name="com.ulp.trabajopractico3.ui.detalle.DetalleFragment"
        android:label="fragment_detalle"
        tools:layout="@layout/fragment_detalle" />
</navigation>